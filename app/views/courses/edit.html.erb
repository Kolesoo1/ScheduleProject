<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Редактирование курса: <%= @course.name %></h1>

          <%= form_with(model: @course, local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :name, 'Название курса', class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :subject_id, 'Предмет', class: 'form-label' %>
              <%= f.select :subject_id, @subjects.map { |s| [s.name, s.id] }, {}, class: 'form-control' %>
            </div>

            <div class="row">
              <div class="col-md-4 mb-3">
                <%= f.label :semester, 'Семестр', class: 'form-label' %>
                <%= f.number_field :semester, class: 'form-control', min: 1, max: 12 %>
              </div>

              <div class="col-md-4 mb-3">
                <%= f.label :year, 'Год', class: 'form-label' %>
                <%= f.number_field :year, class: 'form-control' %>
              </div>

              <div class="col-md-4 mb-3">
                <%= f.label :term, 'Термин', class: 'form-label' %>
                <%= f.number_field :term, class: 'form-control', min: 1, max: 4 %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit 'Обновить курс', class: 'btn btn-primary' %>
              <%= link_to 'Отмена', @course, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>