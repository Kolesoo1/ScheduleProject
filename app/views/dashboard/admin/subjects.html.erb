<div class="container mt-4">
  <h1>Управление предметами</h1>

  <div class="mb-3">
    <%= link_to '← Назад в админ-панель', admin_dashboard_path, class: 'btn btn-secondary' %>
    <%= link_to 'Добавить предмет', '#', class: 'btn btn-primary' %>
  </div>

  <% if @subjects.any? %>
    <table class="table">
      <thead>
      <tr>
        <th>Название</th>
        <th>Код</th>
        <th>Кредиты</th>
        <th>Действия</th>
      </tr>
      </thead>
      <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <td><%= subject.code %></td>
          <td><%= subject.credits %></td>
          <td>
            <%= link_to 'Редактировать', '#', class: 'btn btn-sm btn-secondary' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Предметы не найдены.</p>
  <% end %>
</div>