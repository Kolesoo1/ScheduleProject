<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Редактирование профиля</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                       html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :first_name, 'Имя', class: 'form-label' %>
                <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
              </div>

              <div class="col-md-6">
                <%= f.label :last_name, 'Фамилия', class: 'form-label' %>
                <%= f.text_field :last_name, class: 'form-control' %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, 'Email', class: 'form-label' %>
              <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-warning">
                Ожидает подтверждения: <%= resource.unconfirmed_email %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :password, 'Новый пароль', class: 'form-label' %>
              <small class="text-muted">(оставьте пустым, если не хотите менять)</small>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, 'Подтверждение пароля', class: 'form-label' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :current_password, 'Текущий пароль', class: 'form-label' %>
              <small class="text-muted">(нужен для подтверждения изменений)</small>
              <%= f.password_field :current_password, autocomplete: "current-password",
                                   class: 'form-control', required: true %>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
              <%= f.submit "Обновить", class: 'btn btn-primary' %>
              <%= link_to "Отмена", :back, class: 'btn btn-secondary ms-2' %>
            </div>
          <% end %>

          <div class="mt-4 pt-4 border-top">
            <h3>Удаление аккаунта</h3>
            <p>Не понравился наш сервис?</p>
            <%= button_to "Удалить мой аккаунт", registration_path(resource_name),
                          data: { confirm: "Вы уверены? Это действие нельзя отменить!" },
                          method: :delete, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>