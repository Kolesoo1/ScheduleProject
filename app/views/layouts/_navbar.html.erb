<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container">
    <%= link_to 'Schedule System', dashboard_path, class: 'navbar-brand' %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Расписание', '#', class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Курсы', '#', class: 'nav-link' %>
          </li>

          <% if current_user.teacher? || current_user.admin? %>
            <li class="nav-item">
              <%= link_to 'Мои курсы', '#', class: 'nav-link' %>
            </li>
          <% end %>

          <% if current_user.admin? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                Админ
              </a>
              <div class="dropdown-menu">
                <%= link_to 'Пользователи', admin_users_path, class: 'dropdown-item' %>
                <%= link_to 'Курсы', admin_courses_path, class: 'dropdown-item' %>
                <%= link_to 'Предметы', admin_subjects_path, class: 'dropdown-item' %>
                <%= link_to 'Аудитории', admin_classrooms_path, class: 'dropdown-item' %>
                <div class="dropdown-divider"></div>
                <%= link_to 'Статистика', admin_dashboard_path, class: 'dropdown-item' %>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>

      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
              <%= current_user.full_name %>
              <span class="badge bg-secondary"><%= current_user.display_role %></span>
            </a>
            <div class="dropdown-menu dropdown-menu-end">
              <%= link_to 'Мой профиль', edit_user_registration_path, class: 'dropdown-item' %>

              <% if current_user.student? && current_user.student_profile %>
                <%= link_to 'Профиль студента', edit_student_profile_path, class: 'dropdown-item' %>
              <% elsif current_user.teacher? && current_user.teacher_profile %>
                <%= link_to 'Профиль преподавателя', edit_teacher_profile_path, class: 'dropdown-item' %>
              <% end %>

              <div class="dropdown-divider"></div>
              <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Войти', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Регистрация', new_user_registration_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
