<!DOCTYPE html>
<html>
<head>
  <title>Schedule Project</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <style>
      body { font-family: Arial, sans-serif; margin: 20px; }
      .flash { padding: 10px; margin: 10px 0; border-radius: 5px; }
      .flash.notice { background: #d4edda; color: #155724; }
      .flash.alert { background: #f8d7da; color: #721c24; }
  </style>
</head>
<body>
<% if flash[:notice] %>
  <div class="flash notice"><%= flash[:notice] %></div>
<% end %>

<% if flash[:alert] %>
  <div class="flash alert"><%= flash[:alert] %></div>
<% end %>

<%= yield %>
</body>
</html>